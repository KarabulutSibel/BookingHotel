@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        @if (item.Status == "Onay Bekliyor..")
                        {
                            <span class="badge badge-primary px-2">@item.Status</span>
                        }
                        @if (item.Status == "Onaylandı.")
                        {
                            <span class="badge badge-success px-2">@item.Status</span>
                        }
                        @if (item.Status == "İptal Edildi.")
                        {
                            <span class="badge badge-danger px-2">@item.Status</span>
                        }
                        @if (item.Status == "Bekletiliyor..")
                        {
                            <span class="badge badge-warning px-2">@item.Status</span>
                        }
                    </td>
                    <td><a asp-route-name="Onayla" asp-route-id="@item.BookingId" asp-controller="BookingAdmin" asp-action="ApprovedReservation" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a asp-route-name="IptalEt" asp-route-id="@item.BookingId" asp-controller="BookingAdmin" asp-action="ApprovedReservation" class="btn btn-outline-danger">İptal Et</a></td>
                    <td><a asp-route-name="Beklet" asp-route-id="@item.BookingId" asp-controller="BookingAdmin" asp-action="ApprovedReservation" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="#" class="btn btn-outline-info">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


